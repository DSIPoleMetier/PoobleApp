<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Pooble -{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/pooble/foundation/css/normalize.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/pooble/foundation/css/foundation.min.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/pooble/styles.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('bundles/pooble/foundation/js/vendor/modernizr.js') }}"></script>
    </head>
    <body>
        {% block topBar %}
            {% include 'PoobleBundle::topBar.html.twig' %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/pooble/foundation/js/vendor/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/pooble/foundation/js/foundation.min.js') }}"></script>
            <script>
                $(document).foundation();
            </script>
        {% endblock %}
    </body>
</html>
